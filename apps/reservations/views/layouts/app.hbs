<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
    crossorigin="anonymous" />
  <link href="/css/app.css" rel="stylesheet" />
  {{!-- <title>{{#if viewData.title}}{{ viewData.title }}{{else}}Reservation App{{/if}}</title> --}}
</head>

<body class="main-bg">
  <!-- header -->
  <nav class="navbar navbar-expand-lg navbar-dark py-4">
    <div class="container">
      <a href="http://localhost:3000/reservations/app">
        <img class="navbar-brand" src="/img/logo.png" width="200" alt="logo">
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav ms-auto">
          {{!-- <a class="nav-link active text-black" href="/events">Products</a> --}}
          {{#if user}}
          <a class="nav-link active text-black" href="http://localhost:3001/auth/logout">Logout ({{user.email}})</a>
          {{else}}
          <a class="nav-link active text-black" href="http://localhost:3001/auth/signin">Login</a>
          <div class="vr bg-black mx-2 d-none d-lg-block"></div>
          <a class="nav-link active text-black" href="http://localhost:3001/auth/users/signup">Register</a>
          {{/if}}
        </div>
      </div>
    </div>
  </nav>

  <div class="">
    <header class="bg-primary text-white text-center py-4">
      <div class="d-flex align-items-center flex-column">
        <h2>Reserve Your Ticket for {{eventname}} Event Now!</h2>
      </div>
    </header>
  </div>
  <!-- header -->

  <div class="container my-4">
    {{> content}}
  </div>

  <!-- footer -->
  <div class="copyright py-4 text-center text-white">
    <div class="container">
      <small>
        Copyright - <a class="text-reset fw-bold text-decoration-none" target="_blank">
          Mohamed Salem
      </small>
    </div>
  </div>
  <!-- footer -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
    crossorigin="anonymous"></script>\

  <script>
    window.addEventListener('DOMContentLoaded', () => {
      const ticketInputEle = document.getElementById("tickets-input")
      const ticketTotalPrice = document.getElementById("tickets-totalprice")
      const ticketPriceEle = document.getElementById("tickets-price")
      const submitReservation = document.getElementById("submit-reservation")

      ticketInputEle.addEventListener('input', () => {
        const price = ticketInputEle.value * ticketPriceEle.innerHTML
        ticketTotalPrice.innerHTML = `Total Price: ${price}`
      })
    })
  </script>
</body>

</html>